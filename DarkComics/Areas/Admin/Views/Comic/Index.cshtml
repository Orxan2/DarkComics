@model ComicViewModel
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading page-title-icon-rounded">
            <div class="page-title-icon">
                <i class="pe-7s-id icon-gradient bg-tempting-azure font-weight-bolder">
                </i>
            </div>
            <div>
                <h1>Comic Series</h1>
                <div class="page-title-subheading">
                    Wide selection of buttons that feature different styles for backgrounds, borders and hover options!
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="mb-0 table table-dark table-hover table-hover-flip">
            <thead>
                <tr>
                    <th><h3>#</h3></th>
                    <th><h3>Serie</h3></th>
                    <th><h3>Discount</h3></th>
                    <th><h3>Created Date</h3></th>
                    <th><h3 class="text-center">Status</h3></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var serie in Model.Series)
                {
                    {
                        count++;
                    }
                    <tr>
                        <th scope="row">@count</th>
                        <td>
                            <div class="widget-content p-0">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-left mr-3">
                                        <div class="widget-content-left">
                                            <img width="40" class="rounded-circle" src="~/assets/img/comics/@serie.Name.Replace(" ","-").ToLower()/@serie.Cover" alt="@serie.Name" />
                                        </div>
                                    </div>
                                    <div class="widget-content-left flex2">
                                        <div class="widget-heading">@serie.Name</div>
                                        <div class="widget-subheading opacity-7">@(serie.IsTeam?"Team":"Personal")</div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>@serie.Discount %</td>
                        <td>@serie.CreatedDate</td>
                        <td class="text-center">
                            <a asp-action="ComicIndex" asp-route-id="@serie.Id" class="mb-2 mr-2 btn btn-outline-info"><i class="pe-7s-look pe-lg"></i></a>
                            <a asp-action="Update" asp-route-id="@serie.Id" class="mb-2 mr-2 btn btn-outline-warning"><i class="pe-7s-pen pe-lg"></i></a>
                            <a asp-action="MakeActiveOrDeactive" asp-route-id="@serie.Id" class="mb-2 mr-2 btn @(serie.IsDeleted?"btn-outline-danger":"btn-outline-success")"><i class="pe-lg @(serie.IsDeleted?"pe-7s-delete-user":"pe-7s-refresh")"> </i></a>
                        </td>                      

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>