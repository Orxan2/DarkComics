@model CharacterViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading page-title-icon-rounded">
            <div class="page-title-icon">
                <i class="pe-7s-id icon-gradient bg-tempting-azure font-weight-bolder">
                </i>
            </div>
            <div>
                <h1>Add a Character</h1>
                <div class="page-title-subheading">
                    Wide selection of buttons that feature different styles for backgrounds, borders and hover options!
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Bootstrap 4 Form Validation</h5>
        <form enctype="multipart/form-data" class="needs-validation" novalidate="" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Character.Id" type="hidden" />
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Character.Name"></label>
                    <input asp-for="Character.Name" class="form-control" placeholder="First name" required>
                    <span asp-validation-for="Character.Name"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Character.HeroName"></label>
                    <input asp-for="Character.HeroName" class="form-control" placeholder="First name" required>
                    <span asp-validation-for="Character.HeroName"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Character.NickName"></label>
                    <input asp-for="Character.NickName" class="form-control" placeholder="First name" required>
                    <span asp-validation-for="Character.NickName"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Character.FirstAppearance"></label>
                    <input asp-for="Character.FirstAppearance" class="form-control" placeholder="First name" required>
                    <span asp-validation-for="Character.FirstAppearance"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Character.Creator"></label>
                    <input asp-for="Character.Creator" class="form-control" placeholder="First name" required>
                    <span asp-validation-for="Character.Creator"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="Character.ProfilePhoto"></label>
                    <input asp-for="Character.ProfilePhoto" class="form-control" placeholder="First name" required>
                    <span asp-validation-for="Character.ProfilePhoto"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="Character.FirstPhoto"></label>
                    <input asp-for="Character.FirstPhoto" class="form-control" required>
                    <span asp-validation-for="Character.FirstPhoto"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="Character.SecondPhoto">Image</label>
                    <input asp-for="Character.SecondPhoto" class="form-control" required>
                    <span asp-validation-for="Character.SecondPhoto"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="Character.LogoPhoto">Logo</label>
                    <input asp-for="Character.LogoPhoto" class="form-control" accept="image/*" required>
                    <span asp-validation-for="Character.LogoPhoto"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ChosenPowers"></label>
                    <select asp-for="ChosenPowers" asp-items="@Model.PowerList" class="form-control" multiple>
                        <option value="" disabled>chose</option>
                    </select>
                    <span asp-validation-for="ChosenPowers"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Character.CityId"></label>
                    <select asp-for="Character.CityId" asp-items="@Model.CitiesList" class="form-control">
                        <option value="" disabled>chose</option>
                    </select>
                    <span asp-validation-for="Character.CityId"></span>
                </div>



                <div class="col-12 mb-3">
                    <label asp-for="Character.AboutCharacter"></label>
                    <textarea asp-for="Character.AboutCharacter" class="form-control" placeholder="First name" name="editordata"></textarea>
                    <span asp-validation-for="Character.AboutCharacter"></span>
                </div>





            </div>

            <button class="btn btn-primary" type="submit">Submit form</button>
        </form>
    </div>
</div>


@section summernote{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Character_AboutCharacter').summernote({
                placeholder: 'Hello stand alone ui',
                height: 250
            }
            );
        });
    </script>
}
