@model ComicViewModel
@{
    ViewData["Title"] = "Index";
}

<!-- Random Comics End -->
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center">Random Comics</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="owl-carousel owl-theme">
                    @foreach (var serie in Model.Series)
                    {
                        <div class="item">
                            <div class="volume">
                                <a href="#" class="volume__body">
                                    <img src="~/assets/img/comics/@serie.Name.ToLower().Replace(" ","-")/@serie.Cover" class="w-100 h-100" alt="cover" />
                                    <img src="~/assets/img/comics/@serie.Name.ToLower().Replace(" ","-")/@serie.Backface" class="w-100 h-100" alt="backface" />
                                </a>
                                <div class="volume__footer">
                                    <h5 class="text-center fw-bold my-3">@serie.Name</h5>
                                    <a href="" class="volume__btn">Go Volume</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Random Comics Start -->
<!-- Series Start-->



<section>
    <div class="container">
        <div class="row my-5">
            <div class="col-12">
                <h1 class="text-center">Series</h1>
            </div>
        </div>
        <div class="row" id="search">
            <div class="col-12">
                <input type="text" class="form-control" />
            </div>
        </div>

        <div class="row py-5" id="addHere">
            <partial name="_LoadMore" />
        </div>
        <div class="row my-5">
            <div class="col-12">
                <span class="btn btn-success" id="loadMore">Load More</span>
            </div>
        </div>
    </div>
</section>
<!-- Series End-->
