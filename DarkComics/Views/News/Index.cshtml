@model NewsViewModel
@{
    ViewData["Title"] = "Index";
}

<section id="biography" class="bg-dark py-5 my-0">
    <div class="container-fluid">
        <div class="row py-5">
            <div class="col-12">
                <h1 class="text-white">News</h1>                
            </div>
            <div class="col-12">
                <div class="row">
                    @foreach (var news in Model.NewsList.OrderByDescending(n=>n.CreatedDate).Take(3))
                    {
                        <div class="col-12 col-md-6 col-lg-4 my-5">
                            <div class="news-card rounded">
                                <div class="image-box">
                                    <img src="~/assets/img/news/news-@news.Id/@news.Image" class="w-100 h-100 rounded" alt="">
                                    <div class="date">
                                        <h2 class="text-white">@news.CreatedDate.GetValueOrDefault().ToString("MMM dd")</h2>
                                    </div>
                                </div>
                                <div class="content">
                                    <h2>@news.Title</h2>
                                    <div class="my-3">
                                        @Html.Raw(news.ShortDescription)
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <a class="comment mx-1" href=""><i class="far fa-comment"> 8</i></a>
                                            <a class="like mx-1" href=""><i class="far fa-heart"></i> 5</a>
                                        </div>
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="news-card__btn">Go Detail...</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            @foreach (var news in Model.NewsList)
            {
                <div class="col-12 col-md-6 col-lg-4 my-4">
                    <div class="card rounded">
                        <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="card-header border-0">
                            <img src="~/assets/img/news/news-@news.Id/@news.Image" class="w-100" alt="news" />
                        </a>
                        <div class="card-body border-0" >
                            <h5 class="card-title"><a asp-controller="News" asp-action="Details" asp-route-id="@news.Id">@news.Title</a></h5>
                            <p class="card-text">@Html.Raw(news.ShortDescription)</p>
                        </div>
                        <div class="card-footer border-0 d-flex justify-content-end">
                            <a class="mx-1 btn rounded-circle btn-outline-dark" ><i class="fab fa-facebook-f"></i></a>
                            <a class="mx-1 btn rounded-circle btn-outline-dark" ><i class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>