@model CharacterViewModel
@{
    ViewData["Title"] = "Index";
}

<!-- Character carousel Start -->
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="owl-carousel owl-theme">
                @foreach (var character in Model.Characters)
                {
                    <a  asp-action="Details" asp-route-id="@character.Id" class="item">
                        <div class="character-card">
                            <div class="character-card__body">
                                <img src="~/assets/img/character-@character.Id/@character.FirstImage" class="w-100 h-100" alt="cover" />
                                <img src="~/assets/img/character-@character.Id/@character.SecondImage" class="w-100 h-100" alt="backface" />
                            </div>
                            <div class="character-card__footer">
                                <img src="~/assets/img/character-@character.Id/@character.Logo" width="75" height="75" alt="backface" />
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</section>
<!-- Character carousel End -->

<!-- Character Filter Start -->
<section id="current">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <span class="heading">Character Filter</span>
            </div>
        </div>
        <div class="row">
            @foreach (var character in Model.Characters)
            {
                <div class="col-6 offset-3 offset-sm-0 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                    <a asp-action="Search" asp-route-id="@character.Id" class="comic-box">
                        <div class="comic-box__body">
                            <img src="~/assets/img/character-@character.Id/@character.Profile" class="w-100 h-100" alt="@character.Name" />
                        </div>
                        <div class="comic-box__footer">
                            <h5 class="text-white">@character.HeroName - @character.Name</h5>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<!-- Character Filter End -->