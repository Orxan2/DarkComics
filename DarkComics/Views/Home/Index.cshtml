<!-- Last Week Added Comics End -->
<section id="LastPost">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center">May be You Also Like</h1>
            </div>
        </div>
        <div class="row py-5">
            <div class="col-12">
                <div class="owl-carousel owl-theme">
                    @foreach (var filteredComic in Model.FilteringComics)
                    {
                        <div class="item rounded">
                            <div class="recommendation">
                                <a href="#" class="recommendation__body">
                                    <img src="~/assets/img/@filteredComic.Category.Character.HeroName.ToLower()/comics/@filteredComic.Category.Name.ToLower()/@filteredComic.Episode/@filteredComic.Image"
                                         class="w-100 h-100" alt="volume">
                                </a>
                                <div class="recommendation__footer w-100 d-flex flex-column">
                                    <a href="">@filteredComic.Category.Character.HeroName @filteredComic.Category.Name #@filteredComic.Episode</a>
                                    <a href="">Orxan Ibrahimov</a>
                                    <a href="">@filteredComic.ComicType</a>
                                    <a href="" class="text-danger">$@filteredComic.Price.ToString(".00")</a>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Last Week Added Comics Start-->

<!-- Characters Section Start -->
<section id="characters" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 heading position-relative py-5">
                <h1 class="text-center text-white">Characters</h1>
                <div class="d-none d-lg-block position-absolute top-0 end-0">
                    <img src="~/assets/img/hero-read-comic.png" width="250" alt="hero-read-comic" />
                </div>
            </div>

            <div class="col-12 cards">
                <div class="row">
                    @foreach (var character in Model.Characters)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <div class="circle-image">
                                        <a href="https://comicvine.gamespot.com/cassie-lang/4005-40516/">
                                            <img src="~/assets/img/@character.HeroName.ToLower()/@character.FirstImage" alt="@character.HeroName" />
                                        </a>
                                    </div>
                                </div>
                                <h1 class="text-center">@character.Name - @character.HeroName</h1>
                                <div class="card-body">
                                    <p>
                                        @character.AboutCharacter.ToString()
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <a href="https://comicvine.gamespot.com/cassie-lang/4005-40516/" target="_blank"
                                       class="button">Read more ...</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
