<section id="bestComics">
    <div class="container">
        <div class="row">
            <div class="col-12 position-relative">
                <span class="heading px-4">The Best 3 Comics</span>
                <!-- <div class="d-none d-lg-flex justify-content-between w-100">
                    <img src="~/~/assets/img/cap-logo.png" width="250" alt="hero-read-comic" />
                    <img src="~/~/assets/img/batman.png" width="250" alt="hero-read-comic" />
                    <img src="~/~/assets/img/nightwing.png" width="250" alt="hero-read-comic" />
                </div> -->
                <div id="hero-background" class="d-none d-lg-flex justify-content-between w-100">
                    <img src="~/~/assets/img/cap-logo.png" width="300" alt="hero-read-comic" />
                    <img src="~/~/assets/img/nightwing.png" width="250" alt="hero-read-comic" />
                </div>
            </div>
        </div>
        <div class="row py-5 my-5">
            @foreach (var comic in Model.BestComics)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="cover my-5">
                        <div class="comics">
                            <figure class="front">
                                <img src="~/assets/img/@comic.Category.Character.HeroName.ToLower()/comics/@comic.Category.Name.ToLower()/@comic.Category.Cover" class="w-100 h-100"
                                     alt="cover" />
                            </figure>
                            <figure class="back">
                                <img src="~/assets/img/@comic.Category.Character.HeroName.ToLower()/comics/@comic.Category.Name.ToLower()/@comic.Category.Backface"
                                     class="w-100 h-100" alt="backface" />
                            </figure>
                        </div>
                        <div class="cover__info text-white px-3">
                            <h5>@comic.Category.Character.HeroName @comic.Category.Name #@comic.Episode</h5>
                            <p><strong>Type : </strong>@comic.ComicType.ToString()</p>
                            <p><strong>Price : </strong>$@comic.Price.ToString("0.00")</p>
                            <p><strong>Art By : </strong>Orxan Ibra</p>
                            <p><strong>Written By : </strong>Orxan Ibra</p>
                            <!-- <p><strong>Page Count : </strong>13</p> -->
                            <p><strong>Category : </strong>@comic.Category.Name</p>
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@comic.Id" class="cover__btn">Go Detail</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>
<!-- Comics End -->
